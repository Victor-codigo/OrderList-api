<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="Order\Domain\Model\Order"
            table="Orders"
            repository-class="Order\Adapter\Database\Orm\Doctrine\Repository\OrderRepository">

       <id name="id"
            type="IdentifierType"
            column-definition="CHAR(36) NOT NULL"/>

       <field name="userId"
              column="user_id"
              type="IdentifierType"
              column-definition="CHAR(36) NOT NULL"/>

       <field name="groupId"
              column="group_id"
              type="IdentifierType"
              column-definition="CHAR(36) NOT NULL"/>

       <field name="productId"
              column="product_id"
              type="IdentifierType"
              column-definition="CHAR(36) NOT NULL"/>

       <field name="shopId"
              column="shop_id"
              type="IdentifierType"
              column-definition="CHAR(36)"
              nullable="true"/>

       <field name="description"
              type="DescriptionType"
              length="500"
              nullable="true"/>

       <field name="amount"
              type="AmountType"
              nullable="true"/>

       <field name="unit"
              type="UnitMeasureType"
              length="5"
              nullable="true"/>

       <field name="createdOn"
              column="created_on"
              type="datetime"/>

       <indexes>
              <index name="IDX_user_id"
                     columns="user_id"/>

              <index name="IDX_group_id"
                     columns="group_id"/>

              <index name="IDX_product_id"
                     columns="product_id"/>

              <index name="IDX_shop_id"
                     columns="shop_id"/>

       </indexes>

       <unique-constraints>
            <unique-constraint name="u_order_id"
                               columns="id"/>

        </unique-constraints>


       <!-- Order - Product -->
       <many-to-one field="product"
                    target-entity="Product\Domain\Model\Product"
                    inversed-by="orders">

            <join-column name="product_id"
                         referenced-column-name="id"
                         on-delete="CASCADE" />

       </many-to-one>

       <!-- Orders - ListOrders_Orders -->
       <one-to-many field="listOrders"
                    target-entity="ListOrders\Domain\Model\ListOrdersOrders"
                    mapped-by="order" />

       <!-- Orders - Shops -->
       <many-to-one field="shop"
                    target-entity="Shop\Domain\Model\Shop"
                    inversed-by="orders">

              <join-column name="shop_id"
                           referenced-column-name="id"
                           on-delete="SET NULL" />
       </many-to-one>


    </entity>
</doctrine-mapping>